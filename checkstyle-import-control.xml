<import-control pkg="ch.fihlon.moodini.server">
    <!-- Allow all project specific packages -->
    <allow pkg="ch.fihlon.moodini.server" />

    <!-- Framework and library whitelist -->
    <allow pkg="com.fasterxml.jackson" />
    <allow pkg="com.google.inject" />
    <allow pkg="io.vertx" />
    <allow pkg="java" />
    <allow pkg="javax" />
    <allow pkg="lombok" />
    <allow pkg="org.hibernate.validator" />
    <allow pkg="pl.setblack.airomem" />

    <!-- Disallow sun.* imports as they are not guaranteed to be the same across all JVMs -->
    <disallow pkg="sun" />

    <!-- Disallow Servlet classes everywhere -->
    <disallow pkg="javax.servlet" />
</import-control>